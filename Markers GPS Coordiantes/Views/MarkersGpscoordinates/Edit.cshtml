@model Markers_GPS_Coordiantes.Data.MarkersGpscoordinates

@{
    ViewData["Title"] = "Edit";
}
<div class="col-10 table-content" style="padding-top:20px">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="section-title flex">
            <div class="flex">
                <p class="blu-title bold">Personal Details</p>
            </div>
        </div>
        <br>
        <input type="hidden" asp-for="MarkersId" />
        <input class="edit-input-tag short" type="text" asp-for="FullName" placeholder="Marker fullname">
        <input class="edit-input-tag short left" type="text" asp-for="IdNumber" placeholder="Identity Number"><br>
        <input class="edit-input-tag short " type="text" asp-for="Cellphone" placeholder="Mobile Number">

        <select asp-for="GenderId" class="edit-input-tag short left  " asp-items="ViewBag.GenderId">
            <option value="" disabled selected>Gender</option>
        </select><br>
        <select asp-for="RaceId" class="edit-input-tag short  " asp-items="ViewBag.RaceId">
            <option value="" disabled selected>Race</option>
        </select><br>


        <div class="section-title margin-top flex">
            <div class="flex">
                <p class="blu-title bold">Contact Details</p>

            </div>
        </div><br>

        <input class="edit-input-tag short" type="text" asp-for="PhysicalAddress" placeholder="PhysicalAddress">
        <input class="edit-input-tag short left" type="text" asp-for="PostalCode" placeholder="PostalCode"><br>
        <input class="edit-input-tag short" type="text" asp-for="Latitude" placeholder="Latitude">
        <input class="edit-input-tag short left" type="text" asp-for="Longitude" placeholder="Longitude"><br>
        <input class="edit-input-tag short" type="text" asp-for="WorkTelephone" placeholder="WorkTelephone">
        <input class="edit-input-tag short left" type="text" asp-for="HomeTelephone" placeholder="HomeTelephone"><br>




        <br>

        <div class="section-title margin-top flex">
            <div class="flex">
                <p class="blu-title bold">Professional Details</p>

            </div>
        </div><br>

        <select asp-for="CenterId" class="edit-input-tag short  " asp-items="ViewBag.CenterId">
            <option value="" disabled selected>Center</option>
        </select>

        <input class="edit-input-tag short left" type="text" asp-for="CentreNumber" placeholder="Centre Number"><br>

        <select asp-for="SubjectId" class="edit-input-tag short" asp-items="ViewBag.SubjectId">
            <option value="" disabled selected>Subject</option>
        </select>
        <select asp-for="ExamId" class="edit-input-tag short  left" asp-items="ViewBag.ExamId">
            <option value="" disabled selected>Paper Number</option>
        </select><br>



        <select asp-for="PositionId" class="edit-input-tag short" asp-items="ViewBag.PositionId">
            <option value="" disabled selected>Position</option>
        </select>



        <input class="edit-input-tag short left" type="text" asp-for="PersalNumber" placeholder="Persal Number"><br>

        <div class="form-group">
            <label asp-for="UsersId" class="control-label"></label>
            <select asp-for="UsersId" class="form-control hide-text" asp-items="ViewBag.UsersId"></select>
        </div>
        

        <div class="form-group">
 

            <input asp-for="CreatedDate" type="hidden" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>



