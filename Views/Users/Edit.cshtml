@model Markers_GPS_Coordiantes.Data.Users

@{
    ViewData["Title"] = "Edit";
}


<hr />

    <div class="col-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="section-title flex">
                <div class="flex">
                    <p class="blu-title bold"></p>

                </div>
            </div>
            <input type="hidden" asp-for="UsersId" /><br>

            <input class="edit-input-tag short" type="text" asp-for="Loginname" placeholder="Login Name">
