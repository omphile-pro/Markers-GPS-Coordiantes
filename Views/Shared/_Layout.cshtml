<body class="hold-transition sidebar-mini layout-fixed">
    <nav class="sticky">
        <div class="logo">
            <a href="index.html"><img class="logo" src="~/Images/logo.svg"></a>
        </div>
       
        <div class="header-title ">
            <p class="blu-title text-center bold" style="
                float: none;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            ">@ViewData["Title"]</p>
        </div>
    </nav>

    <div class="row space">

        <!---------------------------------Side Nav-------------------------------------->
        @*<a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>*@
        <div id="wrapper" class="col-2 side-nav-container no-padding toggled">
            <div class="side-nav-details">
                <P class="bolder bigger-font">GDE-ADMIN</P>
                <P class="small-text">admin@example.com</P>
                <div id="close-sidebar">
                    <i class="fas fa-times"></i>
                </div>
            </div>
            <div class="side-nav">
                <ul class="side-nav-list">
                    @if (roleID == 0)
                    {
                        <li class="list-item">
                            <a class="list-item" href="~/Login/"></a>
                        </li>
                    }
                    else
                    {
                        <li class="list-item">
                            <a class="list-item fa fa- fa-power-off" href="~/Login/SignOut/"> Sign Out</a>
                        </li>
                    }
                    <li class="list-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                    @if (roleID == 3)
                    {
                        <li class="list-item"><a asp-controller="Users" asp-action="Index">Accounts</a></li>
                        <li class="list-item"><a asp-controller="SuperAdmin" asp-action="Index">Makers List</a></li>
                        <li class="list-item"><a asp-controller="MarkersReport" asp-action="Index">Distance Report</a></li>
                        <li class="list-item"><a asp-controller="Centers" asp-action="Index">Centers</a></li>
                        <li class="list-item"><a asp-controller="SuperAdmin" asp-action="Import">Import Markers</a></li>
                        <li class="list-item"><a asp-controller="CenterMangers" asp-action="Create">Assign Center</a></li>
                        <li class="list-item"><a asp-controller="group" asp-action="Index">Access Infomation</a></li>
                    }

                    @if (roleID == 2)
                    {
                        <li class="list-item"><a asp-controller="MarkersGpscoordinate" asp-action="Index">Makers List</a></li>
                        <li class="list-item"><a asp-controller="CenterMangers" asp-action="Index">Marking Centers</a></li>
                    }

                    @if (roleID == 1)
                    {
                        <li class="list-item"><a asp-controller="CenterMangers" asp-action="Index">Marking Centers</a></li>

                    }
                </ul>
            </div>
        </div>


        @RenderBody()

    </div>

